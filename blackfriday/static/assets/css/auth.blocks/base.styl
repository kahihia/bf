btnInfoColor = #a9e100
btnPrimaryColor = #7409e8
btnDefaultColor = #c642fe
inputBorderColor = #7409e8

siteWidth = 672px
containerWidth = 436px

.page-header
	margin: 0
	border-bottom: none

	&
	& h1
		margin-top: 0
		font-size: 25px

		small
			margin-top: 5px
			color: #222121
			font-size: 20px
			float: right

			.text-muted
				color: #c2c2c2

label
	&.form-group
		max-width: none
		display: block
		font-weight: normal

	.row > &
		display: block
		margin-bottom: 0
		font-weight: normal

	.row > &
	&.form-group
		.control-label
			display: inline-block
			max-width: 100%
			margin-bottom: 3px
			font-weight: normal
			font-size: 15px
			line-height: 1.3

.form-group
	.control-label
		display: inline-block
		max-width: 100%
		margin-bottom: 5px
		font-weight: 700
		font-size: 16px
		cursor: default

label .help-block
	display: block
	font-weight: normal
	font-size: 12px
	color: #989898
	margin: 3px 0 0

.help-text
	font-size: 13px
	color: #5d5d5d

.site
	display: flex
	min-height: 100vh
	flex-direction: column

.site-header
	padding: 55px 0 30px
	text-align: center

.site-content
	flex: 1
	padding: 25px 0 80px

	&__border
		padding: 7px
		width: containerWidth
		margin: 0 auto
		border-radius: 32px
		background: #5e0198
		background: linear-gradient(to bottom, #5e0198, #2d0346)
		filter: unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr='#5e0198', endColorstr='#2d0346', GradientType=0)")
		box-shadow: 0 0 110px 3px rgba(135, 7, 255, 0.5), 0 14px 33px 16px rgba(0, 0, 0, 0.9)

	&__container
		clearfix()
		background: #fff url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAgAAAAIBAMAAAA2IaO4AAAAD1BMVEXx8fHy8vL8/Pz9/f3////2V85SAAAAK0lEQVQIHQXBAQ0AMAgEscsmYRYQAAkO/vxrWsvVsDpoHjqLuWKX5Chd+gGJ+Qbai8FNtwAAAABJRU5ErkJggg==")
		padding: 35px 45px 25px
		border-radius: 25px

.site-footer
	font-size: 12px
	line-height: 1.2
	color: #838383
	padding: 35px 0
	background: #1a1a1a
	background: linear-gradient(to bottom, #1a1a1a, #282828)
	filter: unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr='#1a1a1a', endColorstr='#282828', GradientType=0)")

	&__container
		clearfix()
		width: siteWidth
		margin: 0 auto
