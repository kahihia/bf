@import 'helpers/mixins'

siteWidth = 402px
largeContainerWidth = 560px

body
	font-size: 16px
	margin: 0
	padding: 0

.page-header
	margin: 0
	border-bottom: none

	&
	& h1
		margin-top: 0
		font-size: 25px

		small
			margin-top: 5px
			color: #222121
			font-size: 20px
			float: right

			.text-muted
				color: #c2c2c2

label
	&.form-group
		max-width: none
		display: block
		font-weight: normal

	.row > &
		display: block
		margin-bottom: 0
		font-weight: normal

	.row > &
	&.form-group
		.control-label
			display: inline-block
			max-width: 100%
			margin-bottom: 5px
			font-weight: normal
			font-size: 16px
			line-height: 1.3

.form-group
	.control-label
		display: inline-block
		max-width: 100%
		margin-bottom: 5px
		font-weight: 700
		font-size: 16px
		cursor: default

label .help-block
	display: block
	font-weight: normal
	font-size: 12px
	color: #989898
	margin: 3px 0 0

.help-text
	font-size: 13px
	color: #5d5d5d

.site
	display: flex
	min-height: 100vh
	flex-direction: column

.site-header
	padding: 40px 0
	text-align: center

.site-content
	flex: 1
	padding: 25px 0

	&__container
		clearfix()
		width: siteWidth
		margin: 0 auto
		background-color: #f4f5f7
		padding: 25px 50px
		transition: width ease 0.15s

		&_size_large
			width: largeContainerWidth

.site-footer
	font-size: 12px
	line-height: 1.2
	color: #a2a2a2
	border-top: 1px solid #ebedef
	padding: 10px 0

	&__container
		clearfix()
		width: siteWidth
		margin: 0 auto

.copyrights
	float: left

.akit-copy
	pt = 2px
	pl = 38px
	font-size: 11px
	text-align: left
	width: 160px
	padding-top: pt
	padding-left: pl
	overflow: hidden
	display: inline-block
	float: right

	&
	&:hover
		color: #bcbcbc
		text-decoration: none

	&__logo
		float: left
		margin-top: -(pt)
		margin-left: -(pl)


.form-control
	box-shadow: none
	border-radius: 0

	&:focus
		box-shadow: none
		border-color: #0089ff

.btn
	font-size: 16px

.btn-primary
	background-color: #0089ff
	border-color: #0089ff
	border-radius: 0
	padding: 8px 24px
