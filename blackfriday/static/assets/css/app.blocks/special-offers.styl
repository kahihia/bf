.special-offers
	text-align: center

	+above(768px)
		text-align: left

	&__item
		text-align: left
		margin-bottom: 35px
		position: relative

	&__banner
		display: block

	&__link
		display: block
		padding-bottom: 57.47%
		border: 1px solid #eee
		border-radius: 3px
		overflow: hidden

		&:focus
		&:hover
			text-decoration: none

	&__shop
		display: inline-block
		position: relative
		height: 29px
		line-height: 25px
		margin-top: -1px
		padding: 0 17px 0 85px
		color: #494949
		border: 1px solid #eee
		border-radius: 0 0 3px 3px
		white-space: nowrap

		&:hover
			text-decoration: none

		&:after
			content: ''
			display: inline-block
			width: 6px
			height: 9px
			background-position: 0 0
			background-repeat: no-repeat
			background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAYAAAAJCAMAAAAmRK2vAAAAM1BMVEV0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0Ceh0CeiUpap0AAAAEXRSTlMAAwgNDhIpRkiipMXGx8/o+KsIXEEAAAAsSURBVAjXY2BgZAABVj4OEMXIKYBKcwmwAykWXn42IMkDIpm5QSQDEyeIBAAdMwECoiTqZgAAAABJRU5ErkJggg==")
			margin-left: 4px

	&__logo
		display: block
		position: absolute
		bottom: -1px
		left: -1px
		border-radius: 3px
		height: auto
		max-width: 69px
		max-height: 42px
		background-color: #fff
		border: 1px solid #eee

	.slick-slider
		margin-bottom: 35px

	.slick-slide
		.special-offers__item
			margin-bottom: 0

	&:hover
		.slick-prev
		.slick-next
			opacity: 0.25

	.slick-prev
	.slick-next
		position: absolute
		top: 50%
		transform: translate(0, -50%)
		width: 30px
		height: 50px
		line-height: 46px
		text-align: center
		background-color: rgba(0, 0, 0, 0.4)
		transition: opacity ease 0.15s
		opacity: 0.1
		border: none
		outline: none
		font: 0/0 a
		color: transparent
		text-shadow: none

		&:hover
			opacity: 1

		&:after
			content: ''
			display: inline-block
			vertical-align: middle
			width: 12px
			height: 20px

	.slick-prev
		left: floor($grid-gutter-width / 2)

		&:after
			background-position: 50% 50%
			background-repeat: no-repeat
			background-image: url("data:image/png;base64,")

	.slick-next
		right: floor($grid-gutter-width / 2)

		&:after
			background-position: 50% 50%
			background-repeat: no-repeat
			background-image: url("data:image/png;base64,")

	.slick-dots
		position: absolute
		top: 6px
		right: 6px + floor($grid-gutter-width / 2)
		margin: 0
		padding: 0

		button
			display: inline-block
			width: 8px
			height: 8px
			padding: 0
			border-radius: 50%
			background-color: #e4e5e6
			transition: background-color 0.15s ease
			vertical-align: middle
			border: none
			outline: none
			font: 0/0 a
			color: transparent
			text-shadow: none

			&:hover
				background-color: $link-hover-color

		li
			list-style-type: none
			display: inline-block
			text-align: center
			width: 16px

			&.slick-active
				button
					background-color: $link-color
