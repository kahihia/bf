.main-all-links
	a
		display: block
		cursor: pointer
		margin-right: 0
		border-radius: 0
		padding: 7px 20px
		font-weight: bold
		font-size: 16px
		border: 1px solid #dfe2e5
		margin-bottom: 25px
		text-align: center
		float: left
		width: 48%
		margin-left: 4%

		&:first-child
			margin-left: 0

		&
		&:hover
		&:focus
			text-decoration: none

	+above(768px)
		display: none
