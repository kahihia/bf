.wrotator
	position: fixed
	top: 0
	left: 0
	z-index: 1
	width: 100%
	height: 100%
	overflow: hidden

	&__i
		margin: 53px auto 0
		position: relative

		+above(768px)
			margin-top: 148px

		+above(992px)
			margin-top: 122px

		+above(1200px)
			margin-top: 100px

	&__left
		position: absolute
		top: 0
		right: 100%
		width: 10000px
		height: 10000px
		background-position: 100% 0
		background-repeat: no-repeat

	&__right
		position: absolute
		top: 0
		left: 100%
		width: 10000px
		height: 10000px
		background-position: 0 0
		background-repeat: no-repeat

.content-container
	position: relative
	z-index: 2

.footer .container
	position: relative
	z-index: 2

body
	position: relative
