.share
	&__container
		{}

	&__content
		height: 43px

		+above(768px)
			height: 22px

	&__prefix
		color: #fff
		font-size: 29px
		margin-bottom: 14px
		background: url("/static/images/share__prefix-shadow.png") 50% 50% no-repeat
		padding-bottom: 6px

	&__postfix
		color: #fff
		font-size: 20px
		margin-top: 35px

	+above(768px)
		&__prefix
		&__postfix
			display: none

	.ya-share2
		&__badge
			background-color: transparent !important
			border-radius: 50%
			padding: 5px

			+above(768px)
				padding: 0

		&__item
			&_service_facebook
				.ya-share2__badge
					box-shadow: 0 0 0 1px #3b5998

			&_service_twitter
				.ya-share2__badge
					box-shadow: 0 0 0 1px #00aced

			&_service_vkontakte
				.ya-share2__badge
					box-shadow: 0 0 0 1px #48729e

			&_service_odnoklassniki
				.ya-share2__badge
					box-shadow: 0 0 0 1px #eb722e

			&_service_gplus
				.ya-share2__badge
					box-shadow: 0 0 0 1px #dc4e41

		&__container
			&_size_s
				.ya-share2__icon
					width: 33px
					height: 33px
					background-size: 18px 18px

					+above(768px)
						width: 20px
						height: 20px
						background-size: 18px 18px

				.ya-share2__item
					margin-right: 15px

					+above(768px)
						margin-right: 7px
