.load-more-btn
	display: inline-block
	border: none
	padding: 15px 35px
	color: $link-color
	text-transform: uppercase
	font-weight: bold
	text-decoration: none
	text-align: center
	background-color: #f7f7f9
	font-size: 18px

	&:hover
		color: $link-hover-color

	&:focus
	&:hover
		text-decoration: none

	&_disabled
	&[disabled]
		opacity: 0.5

		&::after
			content: ''
			display: inline-block
			background-image: url("data:image/gif;base64,")
			width: 16px
			height: 11px
			margin-left: 1em

	span
		border-bottom: 1px dotted

	&-placeholder
		text-align: center
