.user-list
	&__table
		width: 100%

	&__table-tr
		&_role_advertiser
			.user-list__table-td_name_role
				color: $state-success-text

		&_role_manager
			.user-list__table-td_name_role
				color: $state-warning-text

		&_role_admin
			.user-list__table-td_name_role
				color: $state-danger-text

		&_role_operator
			.user-list__table-td_name_role
				color: $state-info-text

	&__table-th
		&_name_id
			width: 1%

		&_name_email
			{}

		&_name_name
			{}

		&_name_role
			width: 1%

		&_name_status
			width: 1%

		&_name_action
			width: 1%

	&__table-td
		vertical-align: middle !important

		&_name_id
			color: $gray-light

		&_name_email
			word-break: break-word

		&_name_name
			word-break: break-word

		&_name_role
			white-space: nowrap

		&_name_status
			text-align: center

		&_name_change-password
			{}
