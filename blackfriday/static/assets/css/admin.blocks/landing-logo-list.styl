.landing-logo-list
	clearfix()
	background-color: #fff
	border-radius: 10px
	box-shadow: 0 0 0 1px #eee
	padding: 0
	margin: 0

	&__item
		float: left
		position: relative
		width: 20%
		height: 120px
		line-height: 120px
		list-style-type: none
		text-align: center
		overflow: hidden
		box-shadow: 0 0 0 1px #eee
		background-color: #fff
		cursor: move

		&:hover
			.landing-logo-list__actions
				opacity: 1

		&_is-dragging
			box-shadow: inset 0 0 0 10px #eee

	&__link
		display: block

	&__logo
		display: inline-block
		vertical-align: middle
		max-width: 70%
		height: auto

	&__actions
		position: absolute
		top: 0
		right: 0
		opacity: 0
		transition: opacity ease 0.15s
		background-color: #fff
		box-shadow: 0 0 0 1px #eee

	&__action
		cursor: pointer
		display: block
		line-height: 1
		padding: 10px

		& + &
			border-top: 1px solid #eee
