.landing-logo-list
	clearfix()
	background-color: #fff
	border-radius: 10px
	box-shadow: 0 0 0 1px #eee
	padding: 0
	margin: 0

	&__item
		float: left
		position: relative
		width: 20%
		height: 120px
		line-height: 120px
		list-style-type: none
		text-align: center
		overflow: hidden
		box-shadow: 0 0 0 1px #eee
		background-color: #fff
		transition: all ease 0.15s

		&:hover
			transform: scale(1.15)
			box-shadow: 0 0 25px rgba(0, 0, 0, 0.25)
			z-index: 1

			.landing-logo-list__action
				opacity: 1

	&__link
		display: block

	&__logo
		display: inline-block
		vertical-align: middle
		max-width: 70%
		height: auto

	&__action
		position: absolute
		top: 0
		right: 0
		opacity: 0
		transition: opacity ease 0.15s
		background-color: #fff
		box-shadow: 0 0 0 1px #eee

	&__edit
		cursor: pointer
		display: block
		line-height: 1
		padding: 15px
		color: $link-color

	&__delete
		cursor: pointer
		display: block
		line-height: 1
		padding: 15px
		color: $state-danger-text
		border-top: 1px solid #eee
