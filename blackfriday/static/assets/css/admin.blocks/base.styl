body
	font-family ptsans

.page-header
	border: none
	margin: 0 0 21px

	h1
		margin: 0

h1
	color: #222121
	font-weight: normal

h2
	color: #3a3a3a
	font-weight: bold
	margin-top: 0
	margin-bottom: 22px

	> small
		margin-left: 20px

label
	&.form-group
		max-width: none
		display: block
		font-weight: normal

	.row > &
		display: block
		margin-bottom: 0
		font-weight: normal

	.row > &
	&.form-group
		.control-label
			display: inline-block
			max-width: 100%
			margin-bottom: 5px
			font-weight: 700
			font-size: 16px
			line-height: 1.3

.form-group
	.control-label
		display: inline-block
		max-width: 100%
		margin-bottom: 5px
		font-weight: 700
		font-size: 16px
		cursor: default

label .help-block
	display: block
	font-weight: normal
	font-size: 12px
	color: #9d9d9d
	margin: 3px 0 0

.site
	display: flex
	min-height: 100vh
	flex-direction: column

.site-header
	{}

.site-main
	flex: 1
	position: relative
	// overflow-x: hidden

.site-sidebar
	width: 288px
	position: absolute
	left: 0
	top: 0
	bottom: 0
	overflow-x: hidden
	overflow-y: auto
	-webkit-overflow-scrolling: touch
	-ms-overflow-style: none

.site-content
	margin-left: 288px
