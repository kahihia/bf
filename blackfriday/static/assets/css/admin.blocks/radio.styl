.radio
	user-select: none

	input
		position: relative
		cursor: pointer

		&::before
			content: ''
			display: block
			width: 16px
			height: 16px
			border-radius: 50%
			box-shadow: inset 0 0 0 1px #b6bbbf
			background-color: #fff
			transition: all ease 0.15s
			position: absolute
			top: -1px
			left: -1px

		&:checked::before
			box-shadow: inset 0 0 0 2px #a9e100, inset 0 0 0 5px #fff
			background-color: #131313

		&[disabled]::before
			background-color: #f0f0f0
