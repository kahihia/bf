.site-header-info
	background-color: #000
	font-size: 13px
	color: rgba(255, 255, 255, 0.3)
	padding: 10px 0

	&__text
		display: inline-block
		padding-top: 4px

	strong
		text-transform: uppercase
		font-weight: normal

	&__about
		display: inline-block
		vertical-align: middle
		width: 50%

	&__rpt
		display: inline-block
		vertical-align: middle
		text-align: right
		width: 50%

	&__auth
		display: inline-block
		vertical-align: middle
		text-align: right
		width: 23%
