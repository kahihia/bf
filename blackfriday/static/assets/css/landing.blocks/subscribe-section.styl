.subscribe-section
	padding: 40px 0 120px
	background: url(/static/images/landing/subscribe-section__bg.png) 50% 100% no-repeat

	&__title
		text-align: center
		font-weight: bold
		font-size: 31px
		color: #f4f4f4
		margin-right: auto
		margin-left: auto
		margin-bottom: 20px
		line-height: 1.2

	&__text
		text-align: center
		margin-bottom: 70px
		font-size: 17px
		color: #f4f4f4
		line-height: 1.2

	&__form
		background-color: #7100b8
		padding: 35px 55px
		border-radius: 10px
		box-shadow: 0 12px 55px rgba(0, 0, 0, 0.65)

	&__form-text
		font-size: 21px
		line-height: 1.2
		margin-bottom: 32px

	&__form-inputs
		margin-bottom: 28px

		.form-control
			border-radius: 0
			padding: 10px 16px
			height: 48px

			+ .form-control
				margin-top: 1px

			&:first-child
				border-radius: 10px 10px 0 0

			&:last-child
				border-radius: 0 0 10px 10px
