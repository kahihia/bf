.header-section
	padding: 50px 0 12px
	margin-bottom: -34px

	&__logo
		margin: -61px 0 0 -15px

	&__title
		font-size: 40px
		font-weight: bold
		color: #f4f4f4
		line-height: 1.2
		margin-top: 0
		margin-bottom: 17px

		strong
			display: block
			text-indent: -0.55em

	&__text
		font-size: 20px
		color: #eee
		line-height: 1.5
		margin-bottom: 10px

		strong
			font-weight: normal
			color: #000
			background-color: #a9e100
			border-radius: 20px
			padding: 3px 10px
			margin-left: -0.5em

	&__action
		display: inline-block
		font-size: 22px

		span
			display: inline-block
			border-bottom: 1px dotted

	:lang(zh-CN) &
		&__logo
			margin: -6px 0 0 60px

		&__slogan
			margin: 10px 0 0 60px
			color: #a8a8a8
			font-size: 25px

		&__title
			font-weight: normal
			font-size: 37px

		&__text
			font-size: 28px
			margin-bottom: 13px

		&__action
			font-size: 23px
