.action-go-go
	display: inline-block
	color: #a9e100
	padding-top: 30px
	padding-right: 93px
	position: relative
	line-height: 1.1

	&__title
		text-transform: uppercase
		font-weight: bold
		font-size: 28px

	&__desc
		font-weight: bold
		font-size: 24px

	&__icon
		position: absolute
		top: 0
		right: 0
		width: 84px
		height: 97px
		line-height: 1
		padding: 30px 0 0 16px

		img
			width: 84px
			height: 97px
			position: absolute
			top: 0
			left: 0

	&__hours
		font-size: 41px
		font-weight: bold
		margin-bottom: -7px

	&__hours-label
		font-size: 15px
		font-weight: bold
