.about-section
	.container
		position: relative

	&__copter
		position: absolute
		top: -270px
		left: -310px

	&__title
		color: #f4f4f4
		font-weight: bold
		font-size: 32px
		margin-bottom: 20px

		small
			display: block
			font-weight: normal

	&__text
		font-size: 18px
		color: #f4f4f4
		margin-bottom: 55px

	&__action
		text-align: center
		padding-top: 100px
		position: relative

	&__action-img
		position: absolute
		z-index: -1

	&__action-title
		font-weight: bold
		margin-bottom: 30px
		text-transform: uppercase
		font-size: 40px
		line-height: 1.1
		white-space: nowrap

	&__action-link
		font-size: 20px
		padding-right: 27px
		padding-left: 27px

	&__carousel
		{}

	.bx-wrapper
		padding: 95px 0 140px
		overflow: hidden

	.bx-viewport
		overflow: visible !important

		img
			max-width: none
			display: inline-block

	a.bx-prev
	a.bx-next
		height: 100%
		width: 50px
		margin-top: 0
		position: absolute
		top: 0
		left: 50%
		right: auto

		&:after
			display: none

	a.bx-prev
		transform: translateX(-550px)
		background: url(/static/images/landing/about-section__carousel-prev.png) 50% 50% no-repeat

	a.bx-next
		transform: translateX(550px)
		background: url(/static/images/landing/about-section__carousel-next.png) 50% 50% no-repeat
