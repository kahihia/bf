.shops-section
	padding: 30px 0

	&__title
		font-size: 31px
		line-height: 1.2
		color: #f4f4f4
		font-weight: bold
		text-align: center
		margin-bottom: 30px

	&__list
		overflow: hidden
		background-color: #fff
		border-radius: 10px
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.8)
		padding: 0
		margin: 0

	&__item
		float: left
		width: 20%
		height: 122px
		list-style-type: none
		text-align: center
		overflow: hidden
		box-shadow: -1px 0 0 #d8d8d8, 0 -1px 0 #d8d8d8

	&__link
		display: block

	&__logo
		display: inline-block
		vertical-align: middle
		max-width: 100%
		height: auto
