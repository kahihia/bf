.invoice-card
	background-color: #f8fbfe

	+ .invoice-card
		margin-top: 35px

	&_active
		box-shadow: 0 0 0 3px #0089ff

	&__header
		position: relative
		padding: 10px 40px 0 26px

		.close
			{}
	&__name
		font-weight: bold
		font-size: 22px

	&__status
		font-weight: bold
		font-size: 22px
		color: #0089ff
		margin-left: 0.25em

	&__cancel
		color: #505050
		text-decoration: underline
		margin-left: 15px

	&__content
		padding: 10px 40px 10px 26px

		.props
			font-size: 16px
			margin-bottom: 7px

		.props__item
			clearfix()

			.price
				float: right
				font-weight: bold

			a
				text-decoration: none
				border-bottom: 1px dotted

		.props__label
			font-weight: bold

		.props__value
			font-weight: bold
			color: #0e5cd7
			margin-left: 0.5em

	&__option-list
		margin: 0
		padding: 0

		.option-list__item
			border-top: 1px solid #e4eaef
			padding: 7px 0
			list-style-type: none

			.price
				float: right

		.option-list__name
			color: #666

	&__footer
		padding: 10px 40px 23px 26px
		display: flex
		background-color: #edf7fe

	&__help
		font-size: 12px
		color: #666
		width: 360px
		align-self: flex-end

	&__calc
		margin-left: auto
		text-align: right
		margin-bottom: 3px

	&__sum
		font-size: 22px

		.price
			font-weight: bold
			margin-bottom: 10px

	&__process
		.btn
			+ .btn
				margin-left: 15px
