.plan-option-list
	width: 83%
	max-width: 100%
	margin-bottom: 40px
	border-bottom: 1px dashed #dbdbdb

	td
		background-color: #f8fcff
		font-size: 13px
		padding: 14px 25px 14px 0

		&:first-child
			padding-left: 20px

	tr:nth-child(even)
		td
			background-color: #fff

	&__prop-label
		display: block
		padding-left: 25px
		position: relative
		color: #666

		.help-preview
			position: absolute
			top: 0
			left: 0

	&__col-value
		text-align: right

	&__col-price
		width: 133px

	.price
		font-weight: bold
		font-size: 16px

	.radio
		font-size: 13px
		color: #666
		margin: 9px 0 0

		input
			margin-top: 1px
