.partner-list
	&__table
		width: 100%

	&__table-th
		&_name_logo
			width: 1%

		&_name_name
			{}

		&_name_link
			{}

		&_name_edit
			width: 1%

	&__table-td
		vertical-align: middle !important

		&_name_logo
			.partner-list__logo-placeholder
				display: inline-block
				width: 100px
				min-height: 60px
				background-color: #eaecee

			img
				width: 100%
				height: auto

		&_name_name
			word-break: break-word

		&_name_link
			word-break: break-word

		&_name_edit
			white-space: nowrap
