.invoice-card
	background-color: #f8fbfe

	+ .invoice-card
		margin-top: 35px

	&_active
		box-shadow: 0 0 0 3px $link-color

	&__header
		position: relative
		padding: 10px 40px 0 26px

		.close
			{}
	&__name
		font-weight: bold
		font-size: 22px

	&__status
		font-weight: bold
		font-size: 22px
		color: $link-color
		margin-left: 0.25em

	&__cancel
		color: #505050
		text-decoration: underline
		margin-left: 15px

	&__content
		padding: 10px 40px 10px 26px

		.props
			font-size: 16px
			margin-bottom: 7px

		.props__item
			clearfix()

			.price
				float: right
				font-weight: bold

			a
				text-decoration: underline

		.props__label
			font-weight: bold

		.props__value
			font-weight: bold
			color: $link-color
			margin-left: 0.5em

	&__option-list
		margin: 0
		padding: 0

		.option-list
			&__th
				padding: 3px 0
				border-bottom: 1px solid #e4eaef

				+ .option-list__th
					padding-left: 25px

				&_name_name
					width: 90%

				&_name_price
					white-space: nowrap
					text-align: right

				&_name_count
					white-space: nowrap
					text-align: center

				&_name_sum
					white-space: nowrap
					text-align: right

			&__td
				padding: 7px 0

				+ .option-list__td
					padding-left: 25px

				&_name_name
					color: #666

				&_name_price
					white-space: nowrap
					text-align: right

				&_name_count
					white-space: nowrap
					text-align: center

				&_name_sum
					white-space: nowrap
					text-align: right

	&__footer
		padding: 10px 40px 23px 26px
		display: flex
		background-color: #edf7fe

	&__help
		font-size: 12px
		color: #666
		width: 360px
		align-self: flex-end

	&__calc
		margin-left: auto
		text-align: right
		margin-bottom: 3px

	&__sum
		font-size: 22px

		.price
			font-weight: bold
			margin-bottom: 10px

	&__process
		.btn
			+ .btn
				margin-left: 15px
